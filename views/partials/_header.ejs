<header>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <!-- Wikimaps Logo -->
      <a class="navbar-brand" href="/">Wikimaps</a>
  
      <!-- Navbar Toggler for mobile view -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
  
      <!-- Navbar Links -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/map/create">Create New Map</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/mymaps">My Maps</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/favourites">Favourites</a>
          </li>
        </ul>

        <!-- Display message + logout button IF logged in -->
        <% if (typeof user_id !== 'undefined' && user_id !== null) { %>
          <div class="ml-auto d-flex align-items-center">
            <p class="text-light mr-3">Logged in</p>
            <form class="form-inline" method="POST" action="/logout">
              <button type="submit" class="btn btn-danger">Logout</button>
            </form>
          </div>
        <% } else { %>
          <!-- Display login form IF not logged in -->
          <form class="form-inline ml-auto" method="POST" action="/login">
            <div class="form-group">
              <input class="form-control mr-2" type="text" name="user_id" placeholder="Enter User ID">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        <% } %>

      </div>
    </div>
  </nav>

</header>