<body>
  <header>
    <%- include('partials/_header.ejs') %>
  </header>

  <h3 class="page-title">My Maps</h3>
  <main id="my-maps-container">
    <!-- my maps should be dynamically added here -->
  </main>

  <script>
    // function for when you click on the pen icon on mymaps page
    $('#my-maps-container').on('click', '.fa-pen', function () {
      const mapId = $(this).data('map-id');
      window.location.href = '/map/edit/'+mapId; // redirect to edit map page
    });
  </script>

